<Window x:Class="LyricsHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LyricsHelper"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <TabControl MinWidth="400" MinHeight="300">
        <TabItem Header="提取全部注音">
            <Grid Background="#FF25FFAA" AllowDrop="True" Drop="TabItem_Drop_ToKANA">
                <Label Content="Drop .docx file here" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </TabItem>
        <TabItem Header="移除多余注音">
            <Grid Background="#FFFFC629" AllowDrop="True" Drop="TabItem_Drop_Clear">
                <Label Content="Drop .docx file here" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
